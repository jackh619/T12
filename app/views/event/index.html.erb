<%= link_to("team roster", team_roster_index_path , :class => 'action new') %>
<%= link_to("calendar", calendar_index_path , :class => 'action new') %>

<div>
  <h2>Event</h2>

  <%= link_to("Add New Event", new_event_path , :class => 'action new') %>

  <table>
    <tr class="header">
      <th>#</th>
      <th>Name</th>
      <th>Type</th>
      <th>Date</th>
      <th>Description</th>
      <th>Location</th>
    </tr>
    <% @event.each do |event| %>
      <tr>
        <td><%= event.id %></td>
        <td><%= event.event_name %></td>
        <td><%= event.event_type %></td>
        <td><%= event.date_time %></td>
        <td><%= event.description %></td>
        <td><%= event.location %></td>
        <td class="actions"> 
        <%= link_to("Show", event_path(event), :class => 'action show') %> 
      </td>
      </tr>
    <% end %>
  </table>
  
</div>

