<%= link_to("<< Back to team_roster", {controller: 'team_roster', action: 'index'}, :class => 'back-link'}) %>

<div class="team roster new">
  <h2>Create member</h2>

  <%= form_for(@student, {controller: 'team_roster', action: 'index'}, :method => 'post') do |f| %>

    <table summary="book form fields">
        <tr>
            <th>First name</th>
            <td><%= f.text_field(:first_name) %></td>
        </tr>
        <tr>
            <th>Last name</th>
            <td><%= f.text_field(:last_name) %></td>
        </tr>
        <tr>
            <th>Class year</th>
            <td><%= f.text_field(:class_year) %></td>
        </tr>
        <tr>
            <th>Email</th>
            <td><%= f.text_field(:email) %></td>
        </tr>
        <tr>
            <th>Phone number</th>
            <td><%= f.text_field(:phone) %></td>
        </tr>

    </table>

    <div class="form-buttons">
      <%= f.submit("Create new student") %>
    </div>

  <% end %>
</div>